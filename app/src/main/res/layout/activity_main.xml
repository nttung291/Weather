<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7d5eaa"
    android:id="@+id/rl_container"
    tools:context="com.example.nttungpc.weather.MainActivity">


    <android.support.design.widget.TabLayout
        android:id="@+id/tl_city"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    </android.support.design.widget.TabLayout>
    <RelativeLayout
        android:id="@+id/rl_city"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="70dp">
        <Button
            android:id="@+id/bt_show"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="#93d2a9fe"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="Show" />
        <EditText
            android:id="@+id/et_cityname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_centerVertical="true"
            android:hint="Enter city name"
            android:textSize="22sp"
            android:layout_toLeftOf="@id/bt_show"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_below="@id/tl_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</RelativeLayout>
